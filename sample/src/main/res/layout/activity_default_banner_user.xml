<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.banner.DefaultBannerActivity"
    android:orientation="vertical">

    <cn.ymex.widget.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:background="#eeeeee"
        app:banner_auto_play="true"
        app:banner_interval="3000">

        <cn.ymex.widget.banner.IndicatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dip"
            app:indicator_selected="@color/colorAccent"
            android:gravity="center"
            app:indicator_shape="circular"
            app:indicator_height="10dip"
            app:indicator_width="10dip" />
    </cn.ymex.widget.banner.Banner>
    <TextView
        android:layout_marginTop="16dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dip"
        android:padding="16dip"
        android:text="banner默认会创建AppCompatImageView为banner 页面,只需要加载图片到这个ImageView组件即可.\n\n默认banner水平方向循环滚动\n滚动间隔5秒" />
</LinearLayout>
