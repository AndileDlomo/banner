<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.banner.DefaultBannerActivity">

    <cn.ymex.widget.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:background="#eeeeee"
        app:banner_auto_play="true"
        app:banner_interval="3000">

        <cn.ymex.widget.banner.IndicatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dip"
            android:gravity="center" />
    </cn.ymex.widget.banner.Banner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dip"
        android:lineSpacingExtra="4dip"
        android:padding="16dip"
        android:text="banner默认会创建AppCompatImageView为banner 页面,只需要加载图片到这个组件即可.\n\n默认banner水平方向循环滚动\n滚动间隔5秒" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:background="#f0f0f0"
        android:onClick="onSelect3"
        android:layout_margin="16dip"
        android:text="切换到第3页"
        android:textColor="#666666" />
</LinearLayout>
